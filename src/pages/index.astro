---
import Cursor from "~/components/cursor.astro";
import Splash from "~/components/splash.astro";
import Header from "~/components/header.astro";
import Intro from "~/components/intro.astro";
import Nosotros from "~/components/nosotros.astro";
import Servicios from "~/components/servicios.astro";
import Showcase from "~/components/showcase.astro";
import Contacto from "~/components/contacto.astro";
import Footer from "~/components/footer.astro";

import "@fontsource-variable/inter";
import "~/styles/index.css";

const { generator, site } = Astro;
const image = new URL("social.jpg", site);
const description =
  "No somos solo una agencia, somos Golden Growth, tu partner digital que impulsa tu negocio. Conoce nuestros servicios y descubre c√≥mo podemos ayudarte a crecer.";
---

<!doctype html>
<html
  lang="es"
  class="h-full min-w-full motion-safe:scroll-smooth"
  data-theme="dark"
>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <link rel="canonical" href={site} />
    <meta name="generator" content={generator} />

    <title>Golden Growth</title>
    <meta name="description" content={description} />

    <!-- social media -->
    <meta property="og:title" content="Golden Growth" />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:url" content={site} />
    <meta name="twitter:card" content="summary_large_image" />

    <!-- initialize theme -->
    <script is:inline>
      const themeSaved = localStorage.getItem("theme");
      if (themeSaved) {
        document.documentElement.dataset.theme = themeSaved;
      } else {
        document.documentElement.dataset.theme = "dark";
      }
    </script>
  </head>
  <body
    class="h-full w-full overflow-x-hidden bg-default text-default text-base selection:bg-secondary selection:text-white"
  >
    <Cursor />
    <Header />
    <Splash />
    <div class="space-y-24 px-8 py-32">
      <Nosotros />
      <Servicios />
      <Showcase />
      <Contacto />
    </div>
    <Footer />

    <script src="../js/main"></script>
    <script src="../js/cursor"></script>
  </body>
</html>
